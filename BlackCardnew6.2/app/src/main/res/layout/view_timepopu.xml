<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@color/c_e"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/c_e">


        <TextView
            android:id="@+id/tv_today"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:text="今天"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_today"
            android:background="@color/bai" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_tiem_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_today"
            android:background="@color/colorWhite"
            android:paddingTop="2dp"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_e" />

    <TextView
        android:id="@+id/tv_canso"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black" />
</LinearLayout>
