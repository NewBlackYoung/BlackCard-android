<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/firstlogin"
    tools:context=".homepage.splash.activity.LoginActivity">

    <RelativeLayout
        android:id="@+id/rela111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp">

        <Button
            android:id="@+id/bjoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_corner_whitekong"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:text="申请办理"
            android:textColor="@color/huihui"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_corner_whitekong"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:text="会籍登入"
            android:textColor="@color/huihui"
            android:textSize="18sp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rela111"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:clipChildren="false"
        android:layerType="software"
        android:orientation="vertical">


        <com.sainti.blackcard.widget.ViewPagerTransform
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:clipChildren="false"></com.sainti.blackcard.widget.ViewPagerTransform>


    </LinearLayout>

    <com.sainti.blackcard.widget.BottomLineLayout
        android:id="@+id/bottomlayoutl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"></com.sainti.blackcard.widget.BottomLineLayout>

    <LinearLayout
        android:id="@+id/dian_Lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rela111"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dian1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/dian2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_dian2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/dian1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_dian3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/dian1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_dian4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/dian1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_dian5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/dian1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_dian6"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/dian1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_dian7"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/dian1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_dian8"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/dian1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_dian9"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/dian1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_dian10"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/dian1"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>
