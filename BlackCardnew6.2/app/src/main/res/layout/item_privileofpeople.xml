<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="151dp"
    android:layout_marginLeft="6dp">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_iconImage"
        android:layout_width="match_parent"
        android:layout_height="141dp" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/iv_iconImage"
        android:layout_alignRight="@+id/iv_iconImage"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:text="/1"
        android:textColor="@color/a_b"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_iconImage"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@+id/tv_count"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/e_eight"
        android:textSize="17sp" />
</RelativeLayout>
