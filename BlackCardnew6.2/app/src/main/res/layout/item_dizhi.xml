<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_white"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/chart_bg1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_corner_whitequan"
        android:layout_below="@id/view_white"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_xingming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_xingming"
            android:text="12345678912" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_xingming"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="地址"
            android:textColor="@color/huihui" />

        <View
            android:id="@+id/view_xian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_location"
            android:layout_marginTop="10dp"
            android:background="@color/xian" />

        <LinearLayout
            android:id="@+id/lin_moren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_xian"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_anniu"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/moren" />

            <TextView
                android:id="@+id/tv_moren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="设为默认"
                android:textColor="@color/danred" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_bianji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/view_xian"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/xiaobianji" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="编辑"
                android:textColor="@color/hui" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_xian"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/lin_bianji"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/xiaolajitong" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="删除"
                android:textColor="@color/hui" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
