<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/colorWhite"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/ao_orderno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="dsadsadsadsad" />

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ao_orderno"
            android:background="@color/c_e" />

        <TextView
            android:id="@+id/statessss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ao_orderno"
            android:text="已取消"
            android:textColor="@color/red"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/ao_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="2018-03-02"
            android:textSize="10sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_e" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ao_qifei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="18dp"
            android:text="北京"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ao_qftime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ao_qifei"
            android:layout_marginLeft="41dp"
            android:layout_marginTop="3dp"
            android:text="21:35"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/iv_f"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@mipmap/iv_qifei" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_f"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/hangbanjiantou" />

        <TextView
            android:id="@+id/ao_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_f"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="东航MU3920"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/ao_jiangluo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_marginTop="18dp"
            android:text="北京"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ao_jltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ao_qifei"
            android:layout_marginRight="36dp"
            android:layout_marginTop="3dp"
            android:text="21:35"
            android:textSize="10sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/c_e" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/heji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="合计："
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ao_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="ao_price"
            android:textColor="@color/red"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>
