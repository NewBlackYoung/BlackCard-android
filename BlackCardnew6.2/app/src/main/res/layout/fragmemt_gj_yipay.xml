<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_title"
        app:srlHeaderMaxDragRate="1"
        app:srlHeaderTriggerRate="0.7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:gravity="center">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:padding="50dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/timg" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_gooot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <View
        android:visibility="gone"
        android:id="@+id/v_bg"
        android:background="@color/eight_zero"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_delete_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@mipmap/delete_su" />
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/lay_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/card_n" />
    </RelativeLayout>


</RelativeLayout>
