<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gif_bg"
    tools:context=".homepage.splash.activity.MemberBindActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iamge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" />

            <ImageView
                android:id="@+id/jieshao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@mipmap/jieshao" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jieshao"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/addfriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bingiidng_btn"
                    android:visibility="gone" />


                <android.support.v7.widget.RecyclerView

                    android:id="@+id/qinre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   ></android.support.v7.widget.RecyclerView>

            </RelativeLayout>
        </RelativeLayout>


    </ScrollView>

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/lly_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/eight_zero">

        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="117dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shap_jiesuan"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@mipmap/huanguan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="账号密码复制成功"
                android:textColor="@color/e_eight" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
