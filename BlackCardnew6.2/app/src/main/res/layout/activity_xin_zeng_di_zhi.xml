<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sainti.blackcard.goodthings.activity.XinZengDiZhiActivity">
    <View
        android:id="@+id/view_xian1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/xian"
        android:layout_below="@id/rlbcard"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/xian"
        android:layout_below="@id/lin_1"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/lin_xiafang"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/chart_bg1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_baocun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/bg_corner_huangquan"
            android:textColor="@color/white"
            android:text="保存"
            android:textSize="16sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:layout_below="@+id/view_xian1"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="收件人姓名"/>

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="5"
                android:background="@color/white"
                android:hint="请输入收件人姓名"
                android:textSize="14sp"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/xian"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="联系方式"/>

            <EditText
                android:id="@+id/rd_phone"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="5"
                android:background="@color/white"
                android:hint="请输入收件人电话"
                android:textSize="14sp"
                android:inputType="number"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/xian"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="所在地区"/>

            <TextView
                android:id="@+id/tv_diqu"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="5"
                android:background="@color/white"
                android:hint="请选择所在地区"
                android:textSize="14sp"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/xian"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="详细地址"/>

            <EditText
                android:id="@+id/ed_xiangxi"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="5"
                android:background="@color/white"
                android:hint="请输入详细地址"
                android:textSize="14sp"
                android:paddingLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_yuan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_corner_whitequan"
        android:visibility="gone"/>



    <View
        android:id="@+id/view_yinying"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/quantouming"
        android:visibility="gone"
        />
</RelativeLayout>
