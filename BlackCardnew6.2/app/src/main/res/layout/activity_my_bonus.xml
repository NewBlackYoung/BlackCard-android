<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sainti.blackcard.my.bonus.activity.MyBonusActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/black"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:tabIndicatorColor="@color/e_eight"
        app:tabSelectedTextColor="@color/e_eight"
        app:tabTextColor="@color/white"></android.support.design.widget.TabLayout>

    <com.sainti.blackcard.widget.MyViewPager
        android:id="@+id/view_p"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
