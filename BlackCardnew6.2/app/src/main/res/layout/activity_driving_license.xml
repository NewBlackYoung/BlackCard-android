<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".my.flyorder.drivinglicense.actvity.DrivingLicenseActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_ho"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabBackground="@drawable/select_tab_guanjia"
        app:tabIndicatorColor="@color/none"
        app:tabSelectedTextColor="@color/more"
        app:tabTextColor="@color/statusBar"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_ho"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    </android.support.v4.view.ViewPager>
</LinearLayout>
