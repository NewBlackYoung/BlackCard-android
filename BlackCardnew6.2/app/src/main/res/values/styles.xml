<resources>
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="tab">
        <!--<item name="android:textColor">@color/select_color</item>-->
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <style name="progress_style_web" parent="android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_animi_forweb</item>
    </style>
    <style name="HeadBar">
        <item name="android:background">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="HeadBarTouMing">
        <item name="android:background">@color/transplant</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
    </style>

    // 支付
    <style name="popwin_liebiao_style">
        <item name="android:windowEnterAnimation">@anim/popuwindow_home_in</item>
        <item name="android:windowExitAnimation">@anim/popuwindow_home_out</item>
    </style>
    // 圈子
    <style name="popwin_circle_style">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="GaoBar">
        <item name="android:background">@color/hei</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">85dp</item>
    </style>

    <style name="AlertDialog" parent="AlertDialog">
        <!-- 这里设置背景为透明，为了隐藏边框 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:topDark">@color/black</item>
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:centerDark">@color/black</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="XinHeadBar">
        <item name="android:background">@color/xinhui</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="XinXinHeadBar">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>


    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>




    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">@color/bj</item>
    </style>




    // 咖啡popuwindow
    <style name="popwin_home_style">
        <item name="android:windowEnterAnimation">@anim/popuwindow_home_in</item>
        <item name="android:windowExitAnimation">@anim/popuwindow_home_out</item>
    </style>


    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>



    <!-- MyProgressDialog Start -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.2</item>
    </style>
    <!-- MyProgressDialog end -->


    <style name="ActionMenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/action_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PhotoPickerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/photopicker_background</item><!--设置显示图片的背景-->
        <item name="actionMenuTextAppearance">@style/ActionMenuTextStyle</item>
    </style>
</resources>